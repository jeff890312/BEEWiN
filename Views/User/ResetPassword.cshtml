@model BEEWiN.Models.Member
<script>
    var li = document.getElementById("setting");
    li.classList.add("active");
</script>
<body class="bg-soft">
    <main>

        <!-- Section -->
        <section class="bg-soft d-flex align-items-center">
            <div class="container">
                <div class="row justify-content-center form-bg-image">
                    <div class="col-12 offset-lg-1 d-flex align-items-center justify-content-center">
                        <div class="signin-inner my-3 my-lg-0 bg-white shadow-soft border rounded border-light p-4 p-lg-5 w-100 fmxw-500">
                            <h1 class="h3 mb-4">重設密碼</h1>
                            <form action="@Url.Action("resetpassword","user")" method="post">
                                <!-- Form -->
                                <div class="mb-4">
                                    <label for="email">帳號郵件</label>
                                    <div class="input-group">
                                        <input type="email" class="form-control" placeholder="@Model.Email" required disabled>
                                    </div>
                                </div>
                                <!-- End of Form -->
                                <!-- Form -->
                                <div class="mb-4">
                                    <label for="password">輸入新密碼</label>
                                    <div class="input-group">
                                        <span class="input-group-text" id="basic-addon4"><span class="fas fa-unlock-alt"></span></span>
                                        <input type="password" name="newpassword" placeholder="請輸入只少8位英數字" pattern="(?=.*\d)(?=.*[a-zA-Z]).{8,}" title="請輸入只少8位英數字" class="form-control" id="password" required autofocus>
                                    </div>
                                </div>
                                <!-- End of Form -->
                                <!-- Form -->
                                <div class="mb-4">
                                    <label for="confirm_password">再次確認密碼</label>
                                    <div class="input-group">
                                        <span class="input-group-text" id="basic-addon5"><span class="fas fa-unlock-alt"></span></span>
                                        <input type="password" placeholder="請輸入只少8位英數字" pattern="(?=.*\d)(?=.*[a-zA-Z]).{8,}" title="請輸入只少8位英數字" class="form-control" id="confirm_password" required>
                                    </div>
                                    <span id='message'></span>
                                </div>

                                <script>
                                    $('#password, #confirm_password, #resetpwd').on('keyup', function () {
                                        if ($('#password').val() == $('#confirm_password').val() && $('#password').val() != null) {
                                            $('#message').html('密碼正確').css('color', 'green');
                                            $('#resetpwd').removeClass("disabled");
                                        } else {
                                            $('#message').html('密碼不符，請再次確認密碼').css('color', 'red');
                                            $('#resetpwd').addClass("disabled");
                                        }
                                    });
                                </script>

                                <!-- End of Form -->
                                <button type="submit" id="resetpwd" class="disabled btn btn-block btn-primary">重設密碼</button>
                            </form>
                            <div class="d-flex justify-content-center align-items-center mt-4">
                                <span class="font-weight-normal">
                                    Go back to the
                                    <a href="@Url.Action("settings","user")" class="font-weight-bold">返回上一頁</a>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</body>


<body style="background-color:#1f273a">
    <div class="content-wrapper">
        <div class="modal modal-popup fade" id="modal-02" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content text-center">
                    <div class="modal-body">
                        @*<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>*@
                        <div class="row">
                            <h3>會員信箱驗證</h3>
                            <p style="margin:0 auto;">感謝您加入BEEWiN必盈網，系統已寄送認證信至您的Email信箱。</p>
                            <!-- /column -->
                        </div>
                        <!-- /.row -->
                        <div class="newsletter-wrapper">
                            <div class="row">
                                <div class="col-md-8 offset-md-1-pop">
                                    <div id="mc_embed_signup">
                                        <br />
                                        <form action="@Url.Action("verify","account")" method="post">
                                            <div id="mc_embed_signup_scroll">

                                                <div class="form-group">
                                                    <input type="text" id="verifycode" name="verifycode" required="required" class="form-control" placeholder="請輸入信件內驗證碼" />
                                                </div>

                                                @if (TempData["Verify"] == "fall")
                                                {
                                                    <p class="text-danger">驗證碼輸入錯誤，請重新輸入</p>
                                                }

                                                <a type="button" id="resent" class="disabled btn btn-primary-can rounded-pill btn-login w-100 mb-2" style="background-color:darkgrey;border-color:darkgray " href="@Url.Action("ReVerify","ReVerify")"></a>

                                                <script>
                                                    //設定倒數秒數
                                                    var t = 60;
                                                    //顯示倒數秒收
                                                    function showTime() {
                                                        if (t > 0) {
                                                            t -= 1;
                                                        }
                                                        document.getElementById('resent').innerHTML = '重新發送（' + t + 's）';
                                                        if (t == 0) {
                                                            document.getElementById('resent').innerHTML = '重新發送';
                                                            $('#resent').removeClass("disabled");
                                                            document.getElementById('resent').removeAttribute('style');
                                                        }
                                                         //每秒執行一次,showTime()
                                                        setTimeout("showTime()", 1000);
                                                    }
                                                    showTime();
                                                </script>

                                                <button type="submit" class="btn btn-primary-next rounded-pill btn-login w-100 mb-2">驗證會員</button>

                                                <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                                                <div style="position: absolute; left: -5000px;" aria-hidden="true">
                                                    <input type="text" name="b_ddc180777a163e0f9f66ee014_4b1bcfa0bc"
                                                           tabindex="-1" value="">
                                                </div>
                                                <div class="clear"></div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.row -->
                    </div>
                    <!--/.modal-body -->
                </div>
                <!--/.modal-content -->
            </div>
            <!--/.modal-dialog -->
        </div>
        <!--/.modal -->
        <!--/.row -->
    </div>
    <!-- /.container -->
</body>
<script>
    var bli = document.getElementById("orders");
    bli.classList.add("show");
    var li = document.getElementById("coinorders");
    li.classList.add("active");  
</script>

<body>
    <div class="container-fluid bg-soft">
        <div class="row">
            <div class="col-12">

                    <div class="jumbotron">
                        <h1>現貨訂單</h1>
                        <br />
                    </div>

                    <div class="table-settings mb-4">

                        <div class="card card-body border-light shadow-sm table-wrapper table-responsive pt-0">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>訂單狀態</th>
                                        <th>方案名稱</th>
                                        <th>總額(USDT)</th>
                                        <th>數量</th>
                                        <th>價格(USDT)</th>
                                        <th>申購時間</th>
                                        <th>訂單編號</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Item -->
                                    @foreach (var item in ViewBag.Coinorders)
                                    {
                                    <tr>
                                        <td>
                                            <span class="font-weight-normal">@item.Order_Status</span>
                                        </td>
                                        <td>
                                            <span class="font-weight-normal">@item.Symbol</span>
                                        </td>
                                        <td>
                                            <span class="font-weight-normal text-success">@item.Total</span>
                                        </td>
                                        <td>
                                            <span class="font-weight-normal">@item.Buy_Amount</span>
                                        </td>
                                        <td>
                                            <span class="font-weight-normal">@item.Buy_Price</span>
                                        </td>
                                        <td>
                                            <span class="font-weight-normal">@item.Buy_Date</span>
                                        </td>
                                        <td>
                                            <small>@item.Order_Guid.Substring(0, 8)</small>
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>

                            @*<div class="card-footer px-3 border-0 d-flex align-items-center justify-content-between">
                                    <div>
                                        @Html.PagedListPager(ViewBag.SelectOrderlist, page => Url.Action("AllOrder", new { page }))
                                    </div>
                                    <div class="font-weight-bold small">
                                        每頁筆數
                                        <b>@ViewBag.SelectOrderlist.PageSize</b>，共
                                        <b>@ViewBag.SelectOrderlist.PageCount</b> 頁，當前第
                                        <b> @ViewBag.SelectOrderlist.PageNumber </b>頁
                                    </div>
                                </div>*@
                        </div>

                    </div>
            </div>
        </div>
    </div>
</body>
